
{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@controllers/*": ["./src/controllers/*"],
            "@models/*": ["./src/models/*"],
            "@routes/*": ["./src/routes/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}